  tools:ignore="TypographyDashes">

  <!-- Percentage of events to include in reports -->
  <string name="ga_sampleFrequency">100.0</string>

  <!-- Enable automatic Activity measurement -->
  <bool name="ga_autoActivityTracking">true</bool>

  <!-- catch and report uncaught exceptions from the app -->
  <bool name="ga_reportUncaughtExceptions">true</bool>

  <!-- If ga_autoActivityTracking is enabled, an alternate screen name can be specified to substitute for the full length canonical Activity name. -->
  <screenName name="com.blundell.hangovercures.archive.ArchiveActivityView">Archive Activity</screenName>
  <screenName name="com.blundell.hangovercures.comments.CommentsActivityView">Comments Activity</screenName>
  <screenName name="com.blundell.hangovercures.details.DetailsActivityView">Details Activity</screenName>
